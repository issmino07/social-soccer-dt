<div class="container p-4">
    <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card ">
       <div class="card-body">
        <form action="/matches/edit-match/{{match.id}}" method="POST">
           <div class="form-group">
            <label for="lugar">LUGAR:</label>
             <input type="text" value="{{match.place_Match}}" class="form-control" name="place_Match" placeholder="place Match" autofocus>
           </div>
           <div class="form-group">
            <label for="hora">HORA:</label>
            <input type="time" value="{{match.match_time}}" class="form-control" name="match_time" placeholder="match time" autofocus>
           </div>
           <div class="form-group">
            <label for="fecha">FECHA:</label>
           <input type="date" value="{{match.Date_match}}" class="form-control" name="Date_match" placeholder="Date match" autofocus>
           </div>
            <button class="btn btn-success btn-block">
              save
            </button>
           </div>
        </form>
       </div>
      </div>
    </div>
  </div>
   
</div>