<div class="container p-4">
    <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card ">
       <div class="card-body">
        <form action="/teams/edit-team/{{team.id}}" method="POST">
           <div class="form-group">
            <label for="nombre">NOMBRE:</label>
             <input type="text" value="{{team.name_team}}" class="form-control" name="name_team" placeholder="Nombre Equipo" autofocus>
           </div>
           <div class="form-group">
            <label for="equipo">APELLIDO:</label>
            <input type="text" value="{{team.league_team}}" class="form-control" name="league_team" placeholder="Liga Equipo" autofocus>
           </div>
           
            <button class="btn btn-success btn-block">
              save
            </button>
           </div>
        </form>
       </div>
      </div>
    </div>
  </div>
   
</div>