<div class="container p-4">
  <center><h3>JUGADOR</h3>
    <div class="row">
        
    {{#each player}}
      <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
               
                <h3 class="card text-uppercase" style="color: blue;">
                    {{name_Player}}
                </h3>
                <p class="m-2">{{surname_Player}}</p>
                <p class="m-2">{{age_Player}}</p>
                <p class="m-2">{{player_Valuation}}</p>
                <a href="/links/delete-player/{{id}}" class="btn btn-danger">Delete</a>
                <a href="/links/edit-player/{{id}}" class="btn btn-secondary">Edit</a>
               
            </div>
        </div>
      </div>
      {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p>There are not links save yet.</p>
          <a href="/links/add-player">Create One!</a>
        </div>
      </div>
    {{/each}}
    </div>
</div>